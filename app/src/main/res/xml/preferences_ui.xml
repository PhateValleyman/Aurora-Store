<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="auto"
        app:entries="@array/pref_themes"
        app:entryValues="@array/pref_themes_values"
        app:key="PREFERENCE_THEME"
        app:title="@string/pref_ui_theme_title"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="0"
        app:entries="@array/pref_default_tab"
        app:entryValues="@array/pref_default_tab_values"
        app:key="PREFERENCE_DEFAULT_TAB"
        app:title="@string/pref_ui_tab_default_title"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:key="PREFERENCE_UI_CARD_STYLE"
        app:summary="@string/pref_ui_card_summary"
        app:title="@string/pref_ui_card_title" />

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:key="PREFERENCE_FEATURED_SNAP"
        app:summary="@string/pref_ui_snap_summary"
        app:title="@string/pref_ui_snap_title" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:key="PREFERENCE_SEARCH_PACKAGE"
        app:summary="@string/pref_ui_package_summary"
        app:title="@string/pref_ui_package" />
</androidx.preference.PreferenceScreen>
